{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$defs": {
    "Provider": {
      "type": "object",
      "properties": {
        "namespace": {
          "$ref": "#/$defs/Rfc1123SubdomainNameOrNull"
        },
        "version": {
          "$ref": "#/$defs/VersionOrNull"
        },
        "configSecret": {
          "type": "object",
          "properties": {
            "name": {
              "$ref": "#/$defs/Rfc1123SubdomainNameOrNull"
            },
            "namespace": {
              "$ref": "#/$defs/Rfc1123SubdomainNameOrNull"
            }
          },
          "additionalProperties": false
        },
        "manifestPatches": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          ]
        },
        "additionalManifests": {
          "type": "object",
          "properties": {
            "name": {
              "$ref": "#/$defs/Rfc1123SubdomainNameOrNull"
            },
            "namespace": {
              "$ref": "#/$defs/Rfc1123SubdomainNameOrNull"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "Rfc1123SubdomainNameOrNull": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "string",
          "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?(\\.[a-z0-9]([-a-z0-9]*[a-z0-9])?)*$",
          "minLength": 1,
          "maxLength": 253
        }
      ]
    },
    "VersionOrNull": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "string",
          "minLength": 1
        }
      ]
    }
  },
  "type": "object",
  "properties": {
    "core": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "object",
          "patternProperties": {
            "^[a-z0-9]([-a-z0-9]*[a-z0-9])?(\\.[a-z0-9]([-a-z0-9]*[a-z0-9])?)*$": {
              "$ref": "#/$defs/Provider"
            }
          },
          "additionalProperties": false
        }
      ]
    },
    "bootstrap": {
