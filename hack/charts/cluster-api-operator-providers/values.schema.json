{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "cluster-api-operator": {
      "type": "object",
      "properties": {
        "install": {
          "type": "boolean",
          "default": true
        }
      }
    },
    "core": {
      "oneOf": [
        { "type": "object" },
        { "type": "null" }
      ]
    },
    "bootstrap": {
      "type": "object",
      "oneOf": [
        { "type": "object" },
        { "type": "null" }
      ]
    },
    "controlPlane": {
      "type": "object",
      "oneOf": [
        { "type": "object" },
        { "type": "null" }
      ]
    },
    "infrastructure": {
      "type": "object",
      "oneOf": [
        { "type": "object" },
        { "type": "null" }
      ]
    },
    "addon": {
      "type": "object",
      "oneOf": [
        { "type": "object" },
        { "type": "null" }
      ]
    },
    "ipam": {
      "type": "object",
      "oneOf": [
        { "type": "object" },
        { "type": "null" }
      ]
    },
    "manager": {
      "type": "object",
      "properties": {
        "featureGates": {
          "type": "object"
        }
      }
    },
    "fetchConfig": {
      "type": "object"
    },
    "configSecret": {
      "type": "object"
    },
    "enableHelmHook": {
      "type": "boolean",
      "default": false
    }
  }
}
